        <defName>Artemiish_AbilityGrip_Jesse</defName>
        <label>grip form</label>
        <description>Morph the weapon into the grip form.</description>
        <iconPath>ArtemiishThings/UI/GripForm</iconPath>
        <comps>
            <li Class="ServiceWeapon.CompProperties_WeaponMaker">
		        <itemDef>Artemiish_SWGrip_Jesse</itemDef>
		        <fleck>PsycastAreaEffect</fleck>
		        <sound>Standard_Reload</sound>
                <clamorType>Ability</clamorType>
